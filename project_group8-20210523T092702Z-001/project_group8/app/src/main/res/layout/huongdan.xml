<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/result_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="CÁCH CHƠI"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#021753"
            android:textSize="35dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Người dùng có thể tùy chỉnh mức chơi từ: dễ, trung bình,khó và gói câu hỏi lần lượt từ 5-10 câu.Sau khi kết thúc chơi sẽ hiện thị kết quả bạn đạt được."
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ở mức DỄ: Màn hình sẽ xuất hiện hình ảnh 1 cầu thủ cùng với đó là 4 câu hỏi, bạn chỉ việc click vào câu trả lời của mình."
            android:textColor="#00050C"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="220dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ở mức TRUNG BÌNH: Màn hình sẽ xuất hiện hình ảnh 1 cầu thủ bị làm mờ cùng với đó là 4 câu hỏi, bạn chỉ việc click vào câu trả lời của mình."
            android:textColor="#00050C"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="330dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ở mức KHÓ: Ở mức này yêu cầu bạn phải nhập tên thường gọi của cầu thủ VD: Messi or messi (thay vì phải nhập đầy đủ là Lionel Messi), sao đó Next để sang câu hỏi kế tiếp cho đến khi hoàn thành hết số câu hỏi."
            android:textColor="#00050C"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="450dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/BtnHdBack"
            android:layout_marginTop="580dp"
            android:layout_centerHorizontal="true"
            android:text="Trở về"
            android:textStyle="bold"
            />
    </RelativeLayout>
</ScrollView >
